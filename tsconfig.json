{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"moduleResolution": "Node",
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vitest/globals"],
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
